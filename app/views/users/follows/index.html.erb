<div class="bordered">
  <div class="px-3 py-1 d-flex align-items-center">
    <%= link_to user_path(@user.username) do %>
      <i class="fas fa-arrow-left"></i>
    <% end %>
    <div class="ml-4">
      <h5 class="mb-0 mt-0"><%= @user.name %></h5>
      <small class="text-secondary mt-0"> @<%= @user.username %> </small>
    </div>
  </div>
  <ul class="nav nav-tabs justify-content-between">
    <li class="nav-item w-50 text-center">
      <%= link_to "Followers", users_follows_path(@user.username, "followers"), class: "nav-link #{"active" if current_page?(follow: "followers")}" %>
    </li>
    <li class="nav-item w-50 text-center">
      <%= link_to "Following", users_follows_path(@user.username, "following"), class: "nav-link #{"active" if current_page?(follow: "following")}" %>
    </li>
  </ul>
</div>
<div class="list-group">
  <% @users.each do |user| %>
    <%= render "users/user", user: user %>
  <% end %>
  <%= will_paginate @users, list_classes: %w(pagination bordered py-4 justify-content-center), 
    renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>