<div class="list-group">
  <% tweets.each do |tweet| %>
    <div class="list-group-item list-group-item-action tweet" aria-current="true">
      <div class="row">
        <div class="col-1">
          <%= link_to user_path(tweet.user.username) do %>
            <%= image_tag "default.png", width: 40, height: 40, class: "mt-2" %>
          <% end %>
        </div>
        <div class="col-11">
          <div class="d-flex w-100 align-items-center justify-content-between">
            <div>
              <%= link_to user_path(tweet.user.username) do %>
                <p class="font-weight-bold mb-0 d-inline"><%= tweet.user.name %>  </p> 
              <% end %>
              <small>@<%= tweet.user.username %>&nbsp; 路</small>
              <small> &nbsp; <%= time_ago_in_words(tweet.created_at) %></small>
            </div>
            <div>
              <div class="dropdown">
                <button class="btn btn-sm btn-tweet-options" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  路路路
                </button>
                <% if current_user==tweet.user %>
                  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <%= link_to tweet_path(tweet), method: :delete, class: "dropdown-item text-danger" do %>
                      <i class="far fa-trash-alt mr-2"></i><small class="text-danger">Delete</small>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
          <p class="mb-1"> <%= tweet.content %> </p>
          <small>And some small print.</small>
        </div>
      </div>
    </div>
  <% end %>
</div>
