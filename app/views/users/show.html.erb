<div class="row h-100">
  <div class="col-2">
    <%= render "shared/navbar" %>
  </div>  
  <div class="col-9">
    <div class="px-3 py-1 bordered d-flex align-items-center">
      <%= link_to tweets_path do %>
        <i class="fas fa-arrow-left"></i>
      <% end %>
      <div class="ml-4">
        <h5 class="mb-0 mt-0"><%= @user.name %></h5>
        <small class="text-secondary mt-0"> <%= pluralize(@user.tweets.count, "Tweet") %> </small>
      </div>
    </div>
    <div class="p-3 bordered d-flex flex-column">
      <div class="d-flex justify-content-between mb-2">
        <%= image_tag "default", width: 100, height: 100 %>
        <div class="d-flex align-items-end">
          <% if @user==current_user %>
            <%= link_to "Edit profile", edit_user_registration_path, class: "btn btn-outline-primary" %> 
          <% else %>
            <% if !current_user.followings.include? @user %>
              <%= link_to "Follow", user_follow_path(@user.username), method: :post, class: "btn btn-outline-primary" %>
            <% else %>
              <%= link_to "Unfollow", user_unfollow_path(@user.username), method: :post, class: "btn btn-outline-primary" %>
            <% end %>
          <% end %>
        </div>
      </div>
      
      <strong> <%= @user.name %> </strong>
      <small> @<%= @user.username %> </small>
      <small class="mb-2 mt-2"> Joined <%= time_ago_in_words(@user.created_at) %> </small>
      <div class="d-flex">
        <%= link_to user_following_path(@user.username) do %>
          <small class="mr-3"><strong style="color: rgb(217, 217, 217);"><%= @user.followings.count %></strong> Following</small>
        <% end %>
        <%= link_to user_followers_path(@user.username) do %>
          <small><strong style="color: rgb(217, 217, 217);"><%= @user.followers.count %></strong> Followers</small>
        <% end %>
      </div>
    </div>
    <%= render "tweets/tweets", tweets: @user.tweets %>
  </div>
</div>